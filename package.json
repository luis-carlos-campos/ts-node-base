{
    "name": "ts-node-base",
    "version": "0.1.0",
    "description": "Base project for node/typescript applications",
    "main": "./src/server.ts",
    "scripts": {
        "build": "rimraf ./build && tsc",
        "lint": "eslint . --ext .ts",
        "lint:fix": "eslint --fix . --ext .ts",
        "start:dev": "nodemon",
        "start:prod": "npm run build && node ./dist/server.js",
        "test": "echo \"Error: no test specified\" && exit 1"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/luis-carlos-campos/ts-node-base.git"
    },
    "author": "LuÃ­s Carlos Campos",
    "license": "ISC",
    "bugs": {
        "url": "https://github.com/luis-carlos-campos/ts-node-base/issues"
    },
    "homepage": "https://github.com/luis-carlos-campos/ts-node-base#readme",
    "devDependencies": {
        "@types/express": "4.17.6",
        "@types/node": "13.11.1",
        "@typescript-eslint/eslint-plugin": "2.27.0",
        "@typescript-eslint/parser": "2.27.0",
        "eslint": "6.8.0",
        "eslint-plugin-import": "2.20.2",
        "eslint-plugin-jest": "23.8.2",
        "eslint-plugin-node": "11.1.0",
        "husky": "4.2.5",
        "lint-staged": "10.1.3",
        "nodemon": "2.0.3",
        "prettier": "2.0.4",
        "pretty-quick": "2.0.1",
        "rimraf": "3.0.2",
        "ts-node": "8.8.2",
        "typescript": "3.8.3"
    },
    "dependencies": {
        "body-parser": "1.19.0",
        "express": "4.17.1"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "*.*": [
            "pretty-quick --staged"
        ],
        "*.{js,ts}": [
            "npm run lint"
        ]
    },
    "engines": {
        "node": ">=13.12.0"
    }
}
